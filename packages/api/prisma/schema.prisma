generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  IN_PROGRESS
  COMPLETED
}

model Booking {
  id         String        @id
  clientId   String
  providerId String
  serviceId  String
  status     BookingStatus @default(PENDING)
  amount     Float
  currency   String
  latitude   Float
  longitude  Float
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}
